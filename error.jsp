<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #fff;
            background-color: #e74c3c; /* Rojo oscuro */
        }

        .error-container {
            background-color: rgba(0, 0, 0, 0.7); /* Fondo negro transparente */
            border-radius: 10px;
            border: 2px solid #fff;
            padding: 30px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        h2 {
            font-family: 'Pacifico', cursive;
            color: #fff;
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        p {
            font-size: 16px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h2>Error</h2>
        <p>${requestScope.errorMessage}</p>
    </div>
</body>
</html>

